<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/settings_title_general">

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_auto_update_check"
            android:title="@string/pref_title_auto_update_check" />

        <ListPreference
            android:defaultValue="-1"
            android:entries="@array/themeSettings"
            android:entryValues="@array/themeSettings_values"
            android:icon="@drawable/baseline_palette_24dp"
            android:key="pref_theme"
            android:title="@string/pref_title_theme" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_auto_login_on_connect"
            android:summary="@string/location_permission_required"
            android:title="@string/pref_title_auto_login_on_network_connection" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="pref_network_mismatch_warning"
            android:summary="@string/location_permission_required"
            android:title="@string/pref_title_network_mismatch" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="notifications_category"
        app:title="@string/settings_title_notifications">

        <Preference
            android:icon="@drawable/baseline_notifications_24dp"
            android:key="notifications"
            android:title="@string/settings_title_notifications" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="notifications_category"
        app:title="@string/settings_title_reset">

        <Preference
            android:key="reset_dismissed_content"
            android:title="@string/reset_dismissed_content" />

    </PreferenceCategory>

</PreferenceScreen>
